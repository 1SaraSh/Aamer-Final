<%- include('./partials/Head.ejs') %>
<%- include('./partials/HeadD.ejs') %>
<link rel="stylesheet" type="text/css" href="/css/Profile.css" />

  <body id="ExpertForm">
    <%- include('./partials/nav.ejs') %>
    <!-- ======= Team Section ======= -->
    <section id="team" class="team section-bg">
      <div class="container">
        <div class="section-title">
          <h2 style="text-align:center;">Contact Expert!</h2>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-lg-6" style="background-color:#f5f5f5 ;">
            <div class="member d-flex align-items-start">
              <div class="member-info">
                <form action="/Session" method="POST">
                  <div class="form-group" style="width: 250px; margin-top: 30px;">
                    <h6>Full Name</h6>
                    <div class="form-group" style="width: 250px; margin-top: 10px;">
                      <input
                        type="text"
                        class="form-control"
                        id="Full_Name"
                        name="Full_Name"
                        placeholder="Saleh"
                        style="padding: 19px;"
                        required
                      />
                      <span id="fullNameError" class="text-danger"></span>
                    </div>
                    <br>
                    <h6>Phone Number</h6>
                    <div class="form-group" style="width: 250px; margin-top: 10px;">
                      <input
                        type="text"
                        class="form-control"
                        id="Phone_Number"
                        name="Phone_Number"
                        placeholder="+966 555555555"
                        style="padding: 19px;"
                        required
                      />
                      <span id="phoneNumberError" class="text-danger"></span>
                    </div>
                    <i style="font-size: 10px;">Note: Phone Number will be shared to Expert and you will be contacted by Whatsapp!</i>
                    <br>
                    <h6>Email</h6>
                    <div class="form-group" style="width: 250px; margin-top: 10px;">
                      <input
                        type="email"
                        class="form-control"
                        id="Email"
                        name="Email"
                        placeholder="company@Aamer.com"
                        style="padding: 19px;"
                        required
                      />
                      <span id="emailError" class="text-danger"></span>
                    </div>
                    <br>
                    <h6>When to be contacted?</h6>
<div class="form-group" style="width: 250px; margin-top: 10px;">
  <input
    type="date"
    id="date"
    name="date"
    class="form-control"
    style="width: 250px; height: 39px;"
    required
  />
  <span id="dateError" class="text-danger"></span>

</div>
<br>
<h6>What do you need help with?</h6>
<div class="form-group" style="width: 250px; margin-top: 10px;">
  <textarea
    id="infoTextarea"
    name="infoTextarea"
    class="form-control"
    rows="3"
    placeholder="Enter information here"
    required
  ></textarea>
  <span id="infoTextareaError" class="text-danger"></span>
</div>
<br>
<button class="btn card-button" style="margin-bottom: 80px;" onclick="return validateForm()">Submit</button>
</div>
</div>
</div>
</div>
</div>
</form>
</div>
</section>
<!-- End Team Section -->
<%- include('./partials/Footer.ejs') %>

<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script>
function validateForm() {
  var fullName = document.getElementById("Full_Name").value;
  var phoneNumber = document.getElementById("Phone_Number").value;
  var email = document.getElementById("Email").value;
  var dateInput = document.getElementById("dateInput").value;
  var infoTextarea = document.getElementById("infoTextarea").value;

  var fullNameRegex = /^[A-Za-z\s]+$/;
  var phoneNumberRegex = /^\+\d{3}\s\d{9}$/;
  var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

  var isValid = true;

  document.getElementById("fullNameError").textContent = "";
  document.getElementById("phoneNumberError").textContent = "";
  document.getElementById("emailError").textContent = "";
  document.getElementById("dateError").textContent = "";
  document.getElementById("infoTextareaError").textContent = "";

  if (!fullNameRegex.test(fullName)) {
    document.getElementById("fullNameError").textContent =
      "Full Name is required and should only contain letters and spaces";
    isValid = false;
  }

  if (!phoneNumberRegex.test(phoneNumber)) {
    document.getElementById("phoneNumberError").textContent =
      "Invalid phone number format";
    isValid = false;
  }

  if (!emailRegex.test(email)) {
    document.getElementById("emailError").textContent =
      "Invalid email format";
    isValid = false;
  }

  if (dateInput === "") {
    document.getElementById("dateError").textContent =
      "Please select a date";
    isValid = false;
  }

  if (infoTextarea === "") {
    document.getElementById("infoTextareaError").textContent =
      "Please enter your information";
    isValid = false;
  }

  if (isValid) {
    // Form submission logic here
    // This will only be executed if all fields are valid
    document.getElementById("dateError").textContent = ""; // Clear date error message (optional)
  }

  return isValid;
}
</script>
</body>
</html>